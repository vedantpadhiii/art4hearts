const Home: React.FC = () => {
  const titleRef = useRef<HTMLHeadingElement>(null);
  const subtitleRef = useRef<HTMLParagraphElement>(null);
  const statSectionRef = useRef<HTMLElement>(null);
  const missionSectionRef = useRef<HTMLElement>(null);
  const briefMissionRef = useRef<HTMLElement>(null);

  useEffect(() => {
    if (!titleRef.current || !subtitleRef.current || !statSectionRef.current || !missionSectionRef.current) {
      return;
    }

    // Initial hero animations
    gsap.set([titleRef.current, subtitleRef.current], { opacity: 0 });
    
    const heroTl = gsap.timeline();
    heroTl
      .to(titleRef.current, {
        opacity: 1,
        scale: 1,
        duration: 1,
        ease: "power3.out"
      })
      .to(subtitleRef.current, {
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power3.out"
      }, "-=0.5");

    // Stats section animations
    const statCards = statSectionRef.current.querySelectorAll('.stat-card');
    const numbers = statSectionRef.current.querySelectorAll('.number');
    const labels = statSectionRef.current.querySelectorAll('.label');
    
    gsap.set(statCards, { opacity: 0, y: 50 });
    gsap.set(labels, { opacity: 0 });
    
    ScrollTrigger.create({
      trigger: statSectionRef.current,
      start: "top center+=100",
      onEnter: () => {
        // Animate cards with a bounce effect
        gsap.to(statCards, {
          opacity: 1,
          y: 0,
          duration: 1.2,
          stagger: 0.15,
          ease: "back.out(1.2)"
        });
        
        // Animate numbers with a smooth countup
        numbers.forEach((number, index) => {
          const target = parseInt(number.getAttribute('data-value') || '0', 10);
          let obj = { value: 0 };
          
          gsap.to(obj, {
            value: target,
            duration: 2.5,
            ease: "power3.out",
            delay: 0.2 + index * 0.1,
            onUpdate: () => {
              number.textContent = Math.round(obj.value) + '+';
            }
          });
        });
        
        // Fade in labels after numbers
        gsap.to(labels, {
          opacity: 1,
          duration: 0.8,
          stagger: 0.15,
          delay: 0.5,
          ease: "power2.out"
        });
      },
      once: true // Only trigger once
    });

    // Mission section animations
    gsap.fromTo(missionSectionRef.current, 
      { 
        opacity: 0, 
        y: 50 
      },
      {
        opacity: 1,
        y: 0,
        duration: 1,
        scrollTrigger: {
          trigger: missionSectionRef.current,
          start: "top center+=100",
          end: "bottom center",
          toggleActions: "play none none reverse"
        }
      }
    );

    // Parallax effect for hero section
    gsap.to(titleRef.current, {
      scrollTrigger: {
        trigger: titleRef.current,
        start: "top top",
        end: "bottom top",
        scrub: 1
      },
      y: (index, target) => -target.offsetHeight * 0.2,
      ease: "none"
    });

    return () => {
      // Cleanup ScrollTrigger instances
      ScrollTrigger.getAll().forEach(trigger => trigger.kill());
    };
  }, []);

  return (
      <HomeContainer>
        <HeroSection>
          <HeroContent>
            <HeroTitle ref={titleRef}>
              Art4Hearts
            </HeroTitle>
            <HeroSubtitle ref={subtitleRef}>
              Creating smiles through art, one heart at a time
            </HeroSubtitle>
          </HeroContent>
        </HeroSection>

        <MissionSection ref={missionSectionRef}>
          <h2>OUR MISSION</h2>
          <p>
            Art4Hearts is a youth-led nonprofit spreading creativity and comfort through crafting personalized art therapy kits, 
            leading art workshops, and handmaking bracelets with uplifting messages to brighten the lives of communities we serve.
          </p>
        </MissionSection>

        <StatSection ref={statSectionRef}>
          <StatCard className="stat-card">
            <div className="number" data-value="4500">0</div>
            <div className="label">VOLUNTEERS WORLDWIDE</div>
          </StatCard>
          <StatCard className="stat-card">
            <div className="number" data-value="150">0</div>
            <div className="label">ACTIVE CHAPTERS</div>
          </StatCard>
          <StatCard className="stat-card">
            <div className="number" data-value="50">0</div>
            <div className="label">COUNTRIES REACHED</div>
          </StatCard>
          <StatCard className="stat-card">
            <div className="number" data-value="1000">0</div>
            <div className="label">ART KITS & BRACELETS</div>
          </StatCard>
        </StatSection>

        <RegistrationSection>
          <h2>Join Our Mission!</h2>
          <p>
            Be part of a global movement that brings joy and creativity to those who need it most. 
            Whether you're an artist, student, or someone who wants to make a difference, 
            there's a place for you in the Art4Hearts family.
          </p>
          <ButtonContainer>
            <RegistrationButton 
              href="https://docs.google.com/forms/d/e/1FAIpQLSd98E0LsNhBywLdUhlIBmp6e88bjt81Fh1tV6Lz6FklT1LtEg/viewform?usp=send_form" 
              target="_blank" 
              rel="noopener noreferrer"
            >
              Join Our Mission
            </RegistrationButton>
          </ButtonContainer>
          <FormEmbed>
            <iframe
              src="https://docs.google.com/forms/d/e/1FAIpQLSd98E0LsNhBywLdUhlIBmp6e88bjt81Fh1tV6Lz6FklT1LtEg/viewform?embedded=true"
              title="Volunteer Registration Form"
              style={{ width: "100%", height: "800px", border: "none", background: "#fff" }}
              loading="lazy"
            >
              Loading...
            </iframe>
          </FormEmbed>
        </RegistrationSection>
      </HomeContainer>
  );
};

